{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Django: Start App",
      "type": "shell",
      "command": "source /entrypoint && python manage.py startapp ${input:appName}",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "statusbar": {
          "color": "#079165",
          "label": "$(new-folder) Dj: Start App",
          "detail": "Django: Start App",
          "hide": true
        }
      }
    },
    {
      "label": "Django: Make Migrations",
      "type": "shell",
      "command": "source /entrypoint && python manage.py makemigrations",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "statusbar": {
          "color": "#079165",
          "label": "$(file-code) Dj: Make Migrations",
          "detail": "Django: Make Migrations"
        }
      }
    },
    {
      "label": "Django: Migrate",
      "type": "shell",
      "command": "source /entrypoint && python manage.py migrate",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "statusbar": {
          "color": "#079165",
          "label": "$(database) Dj: Migrate",
          "detail": "Django: Migrate"
        }
      }
    },
    {
      "label": "Coverage: Run Pytest",
      "type": "shell",
      "command": "bash -ic 'source /entrypoint && coverage run -m pytest'",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "statusbar": {
          "color": "#079165",
          "label": "$(run-all) Cov: Test",
          "detail": "Coverage: Run Pytest"
        }
      }
    },
    {
      "label": "Coverage: Report",
      "type": "shell",
      "command": "coverage report",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "statusbar": {
          "color": "#079165",
          "label": "$(run-all) Cov: Report",
          "detail": "Coverage: Report"
        }
      }
    }
  ],
  "inputs": [
    {
      "id": "appName",
      "type": "promptString",
      "description": "Description of the input variable"
    }
  ]
}
